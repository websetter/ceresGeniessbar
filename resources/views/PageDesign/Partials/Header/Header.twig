          </div>
        {% endif %}
      <div id="bottomBar">
        <div class="container-max">
        <ul>
          <li><a href="{{ trans("GeniessBar::Template.LinkNavBarStartseite") }}" title="{{ trans("GeniessBar::Template.NavBarStartseite") }}">{{ trans("GeniessBar::Template.NavBarStartseite") }}</a></li>
          <li><a href="{{ trans("GeniessBar::Template.LinkNavBarGutschein") }}" title="{{ trans("GeniessBar::Template.NavBarGutschein") }}">{{ trans("GeniessBar::Template.NavBarGutschein") }}</a></li>
          <li><a href="{{ trans("GeniessBar::Template.LinkNavBarFirmenkunde") }}" title="{{ trans("GeniessBar::Template.NavBarFirmenkunde") }}">{{ trans("GeniessBar::Template.NavBarFirmenkunde") }}</a></li>
          <li><a href="{{ trans("GeniessBar::Template.LinkNavBarLogo") }}" title="{{ trans("GeniessBar::Template.NavBarLogo") }}">{{ trans("GeniessBar::Template.NavBarLogo") }}</a></li>
        </ul>
      </div>
  </div>
</header>

{% if category.linklist == "Y" %}
    {% set initialCategory = { id: category.id } %}
{% else %}
    {% set initialCategory = category %}
{% endif %}

<mobile-navigation :navigation-tree-data="{{ categories | json_encode }}" :initial-category="{{ initialCategory | json_encode }}" template="#vue-mobile-navigation"></mobile-navigation>
